<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ảnh côn trùng -->
            <ImageView
                android:id="@+id/imgAnh"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/alticini" />

            <!-- Tên chính và nút Lưu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvTen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cabbage white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnLuuBaiViet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Tên khoa học -->
            <TextView
                android:id="@+id/tvTenKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scientific name: Pieris rapae"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <!-- Badges -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤 Non-toxic"
                    android:padding="8dp"
                    android:background="@drawable/bg_badge_green"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌱 Harmful to plants"
                    android:padding="8dp"
                    android:background="@drawable/bg_badge_red"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 📖 Mô tả -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📖 Mô tả"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTaptinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Cabbage white is a ferocious pest for cabbage, kale, and broccoli. It emerges early in spring."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Hình dạng -->
            <TextView
                android:id="@+id/tvMota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="White wings with small black dots. Upperside creamy white, wingspan 1.3–1.9 inch, etc."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 🌍 Phân bố -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌍 Phân bố"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPhanbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phân bố rộng khắp châu Âu, châu Á, Bắc Mỹ và nhiều vùng ôn đới khác."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 🔬 Hình thái -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔬 Hình thái"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvHinhtai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cánh màu trắng với chấm đen đặc trưng. Cơ thể nhỏ, anten dài, chân mảnh."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 🛡️ Biện pháp phòng trừ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛡️ Biện pháp phòng trừ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPhongtru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sử dụng bẫy pheromone, thuốc trừ sâu sinh học, và biện pháp canh tác hợp lý để kiểm soát số lượng."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
